
 <div class="row">
<%= devise_error_messages! %>
   <div class="col s12 m6 offset-m3">
     <div class="card">
       <div class="card-action  blue white-text lighten-1">
          <i class="material-icons">perm_identity</i> <span class="card-title">  Fazer Login</span>
       </div>
       <div class="card-content">

         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

         <div class="input-field">
           <i class="material-icons prefix">account_circle</i>
           <%= f.email_field :email, autofocus:true, class: "validate", id: "icon_prefix" %>
           <label for="icon_prefix">E-mail</label>
         </div>

         <div class="input-field">
           <i class="material-icons prefix">lock_outline</i>
           <%= f.password_field :password, autofocus:true, class: "validate", id: "icon_prefix" %>
           <label for="icon_prefix">Senha</label>
         </div>

        <div class="input-field">
          <p>
          <label>
             <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, id:"remember" %>
              <% end %>
              <span>Lembrar-me</span>
          </label>
          </p>
        </div>
        <div class="input-field">

           <%= f.submit "Fazer Login", class: 'btn waves-effect waves-light blue lighten-2', style:"width: 100%" %>

          </div>


       </div>

     </div>
   </div>
 </div>











    <% end %>

 


