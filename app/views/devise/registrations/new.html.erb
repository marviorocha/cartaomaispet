<%= title("Cadastro de Usuário") %>


<div class="row">
<%= devise_error_messages! %>



	<div class="col s12 m7 offset-m2">
		<div class="card">
			<div class="card-action card-action  blue white-text lighten-1">
				<div class="card-title">
					<i class="material-icons">assignment_ind</i> Cadastro de Usuário
				</div>
			</div>
			<div class="card-content">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

				<div class="row">
					<div class="input-field col s6">
						<%= f.text_field :name, class: "validate", placeholder:"Nome" %>
						<span class="helper-text field_with_errors" data-error="wrong" data-success="ok"></span>
					</div>
						<div class="input-field col s6">
						<%= f.text_field :last_name, class: "validate", placeholder:"Sobre nome" %>
						<span class="helper-text field_with_errors" data-error="wrong" data-success="ok"></span>
					</div>
				</div>

				<div class="row">
					<div class="input-field col s12 ">
						<%= f.email_field :email, class: "validate", placeholder:"Digite Seu E-mail" %>
							<span class="helper-text field_with_errors" data-error="wrong" data-success="ok"></span>
					</div>
				</div>

				<div class="row">
				<div class="input-field col s6">
					<%= f.password_field :password, class: "validate", placeholder: "Escolha sua senha" %>
					<% if @minimum_password_length %>
					<%= @minimum_password_length %> minímo de caracteres
					<% end %>
				</div>

				<div class="input-field col s6">
			 	<%= f.password_field :password_confirmation, class: "validate",  placeholder: "Confirme sua senha" %>
				<span class="helper-text field_with_errors" data-error="wrong" data-success="ok"></span>
				</div>

				</div>



				<% if params[:store] %>
					<%=  f.hidden_field :role, value: "store"  %>
				<% else %>
				<%=  f.hidden_field :role, value: "user"  %>
				<% end %>


				<div class="row">
					<button type="submit" class="btn-large waves-effect waves-light lighten-1 blue">Cadastre-se agora</button>
				</div>


				<!-- End card-content -->
			</div>
		</div>
	</div>
</div>

<!-- end form  -->
<% end %>










