
<div class="row">
    <h4 class="center-align">

<i class="medium material-icons blue-text text-darken-5">assignment_ind</i> <br>

      Cadastro de Usuarios</h4>
  <div class="col s12 m6 offset-s3 offset-m3 ">
    <div class="row card-panel">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>


      <div class="input-field col s6">

        <%= f.text_field :name, class: "validate" %>
          <label for="name">Nome</label>
      </div>
      <div class="input-field col s6">

              <%= f.text_field :last_name, class: "validate" %>
 
        <label for="last_name">Sobre Nome</label>
      </div>

    <div class="row">
      <div class="input-field col s12">

         <%= f.email_field :email, autofocus: true, class: "validate" %>
         <%= f.label :email, for: "email" %><br />

      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">



      <%= f.password_field :password, autocomplete: "new-password", class: "validate" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> min√≠mo de caracteres)</em>
      <% end %>
      <%= f.label :password, for: "password" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">

        <%= f.password_field :password_confirmation,  autocomplete: "new-password", class: "validate" %>
        <%= f.label :password_confirmation %>
      </div>
    </div>
    <button type="submit" class="btn waves-effect waves-light lighten-1 blue"> Cadastrar</i></button>
    <div class="section"></div>
  </div>
</div>


</div>
<!-- end form  -->
<% end %>

