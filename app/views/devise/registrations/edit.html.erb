
<%=  title('Editando' + resource_name.to_s.humanize) %>
<!-- end title tag -->


<div class="section"></div>

<!-- left col  -->

<div class="col s12 m3">
<%=  select_menu()  %>
</div>


  <!-- col right -->


    <div class="col s12 m9">
      <div class="card-panel white">
        <span class="darken-text">
      <h4>Editar  <%= resource_name.to_s.humanize %></h4>



      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-field col s6">

          <%= f.text_field :name, autofocus: true, autocomplete: "email", class:"validate" %>
          <%= f.label :name %>
        </div>
        <div class="input-field col s6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class:"validate" %>
        </div>


        <div class="input-field col s12">

          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"validate" %>
            <%= f.label :email %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="input-field col s12">

          <%= f.password_field :password, autocomplete: "new-password", class:"validate" %>
            <%= f.label :password %> <i>(Deixe em branco caso não quer alterar sua senha)</i>
          <% if @minimum_password_length %>

            <em><%= @minimum_password_length %> caracteres no miníno</em>
          <% end %>
        </div>

        <div class="input-field col s6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"validate" %>
          <%= f.label :password_confirmation %>

        </div>

        <div class="input-field col s6">
          <%= f.password_field :current_password, autocomplete: "current-password", class:"validate" %>
          <%= f.label :current_password %> <i>(precisamos que você confirme sua senha para confirmar as alterações)</i>

        </div>
        <div class="input-field col s12">
        <div class="file-field input-field">
             <div class="btn">
               <span>Selecionar Foto</span>
              <%= f.file_field :avatar %>
             </div>
             <div class="file-path-wrapper">
               <input class="file-path validate" type="text" placeholder="Enviar sua foto">
             </div>
        </div>
        </div>


        <div class="input-field col s12">
          <%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>
        </div>



        <div class="actions">
          <%= f.submit "Atualizar", class:"btn green darken-2" %>
        </div>
      <% end %>

